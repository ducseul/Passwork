<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_account_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Create account"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_save_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Save" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp">

        <LinearLayout
            android:id="@+id/ll_title_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="67dp"
                android:text="Title"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_cst"
                android:orientation="horizontal">

                    <AutoCompleteTextView
                    android:id="@+id/et_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btnPasteTitle"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_baseline_content_paste_24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_website_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title_wrapper"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:text="Website"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_cst"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_website"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btnPasteWebsite"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_baseline_content_paste_24" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_username_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_website_wrapper"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/username_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="OAuth Services"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_below="@+id/username_lable"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_password_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_username_wrapper"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Password"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_cst"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:singleLine="true"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btnGenerate"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_baseline_autorenew_24" />

                <ImageButton
                    android:id="@+id/btnPastePassword"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_baseline_content_paste_24" />
            </LinearLayout>
        </LinearLayout>

        <!--        <SeekBar-->
        <!--            android:id="@+id/rangeslider"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="12dp"-->
        <!--            android:layout_marginStart="110dp"-->
        <!--            android:layout_below="@+id/ll_password_wrapper"-->
        <!--            style="@style/Widget.AppCompat.SeekBar.Discrete"-->
        <!--            android:max="10"-->
        <!--            android:progress="10"/>-->

        <com.google.android.material.slider.Slider
            android:id="@+id/rangeslider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_password_wrapper"
            android:layout_marginStart="110dp"
            android:layout_marginTop="-20dp"
            android:stepSize="1"
            android:valueFrom="8"
            android:valueTo="20"
            app:labelBehavior="withinBounds" />

        <RelativeLayout
            android:id="@+id/ll_description_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rangeslider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Description"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_label"
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/input_round_light_curve"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/cardview_light_background"
                    android:gravity="center"
                    android:lines="3"
                    android:maxLines="4"
                    android:paddingStart="0dp"
                    android:paddingEnd="5dp"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>